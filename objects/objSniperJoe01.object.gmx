if (entityCanStep())
{
    if (resetDir)
    {
        calibrateDirection(); // face player when it spawns
        myDir = image_xscale;
        resetDir = 1;
    }
    
    // if it's on the ground, check if the player is nearby it
    // if nearby, jump
    if (ground)
    {
        if (!shooting)
        {
            calibrateDirection();
        }
        if (shootCount &gt;= shootCountMax)
        {
            waitCount += 1
            if waitCount &gt;=60
            {
                if(jumpSpriteTimer &lt;= 10){
                jumpSpriteTimer += 1
                sprite_index = sprSniperJoe01Crouch
                }
                if(jumpSpriteTimer == 10){
                jumping = 1
                jumpSpriteTimer = 0
                yspeed = yspeedJump;
                ground = false;
                jumpCount++;
                waitCount = 0;
                if (!instance_exists(target))
                {
                    shootCount = 0;
                    jumpCount = 0;
                }
                else if (instance_exists(target))
                {
                    if (point_distance(x, 0, target.x, 0) &gt; radius || jumpCount &gt;= jumpCountMax)
                    {
                        shootCount = 0;
                        jumpCount = 0; // Stops Jumping if you are too far away or the Joe has reached the maximum amount of consecutive jumps
                    }
                }
            }
           }
        }
    }
    
    // Shooting
    if (!shooting)
    {
        // reset animation if it's returning from shooting
        if (image_index &gt; 0 &amp;&amp; shootTimer mod 10 == 0)
        {
            image_index -= 1;
        }
        shootTimer += 1; // increment shooting timer
        if (shootTimer &gt;= 90)
        {
            shooting = true;
            shootTimer = 0;
        }
    }
    else
    {
        if (image_index &lt; 3) // if it's getting ready to shoot, play animation
        {
           animTimer +=1
           if(animTimer == 2)
            image_index = 1
           if(animTimer == 8)
            image_index = 0
           if(animTimer == 30)
            image_index = 2
           if(animTimer == 35){
            image_index = 3
            animTimer = 0
            }
        }
        else
        {
            if waitCount &lt; 3
            {
                waitCount += 1
            }
            else
            {
                shootTimer += 1;
                if (shootTimer &gt;= 6)
                {
                    if (shootAmount &lt; 1)
                    {
                        shootTimer = 0;
                        var shootID, box;
                        
                        // set spawn point for bullet based on xscale
                        if (image_xscale == 1)
                        {
                            box = bbox_right;
                        }
                        else
                        {
                            box = bbox_left;
                        }
                        shootID = instance_create(box, y - 15, objEnemyBullet);
                        shootID.xspeed = image_xscale * 4;
                        shootID.image_xscale = image_xscale;
                        shootID.sprite_index = sprSniperJoe01Shot;
                        shootID.image_speed = 0.25
                        shootAmount++;
                        playSFX(sfxBusterHalfCharged)
                    }
                    if (shootAmount &gt;= 1)
                    {
                      animTimer += 1;
                      if(animTimer == 10){
                        shootTimer = 0;
                        shootAmount = 0;
                        shooting = false;
                        shootCount++;
                        waitCount = 0;
                        image_index = 0
                        animTimer = 0;
                      }
                    }
                }
            }
        }
    }
    
    // if it's on the ground, set jump sprite
    // if it isn't, set regular sprite, and make sure it's not sliding on the ground
    if (!ground)
    {
        shootTimer = 0;
        shooting = false;
        sprite_index = sprSniperJoe01Jump;
        jumpSpriteTimer = 0
    }
    if (ground)
    {
        if(jumping == 1 &amp;&amp; jumpSpriteTimer &lt;= 10){
        jumpSpriteTimer += 1
        sprite_index = sprSniperJoe01Crouch;
           if(jumpSpriteTimer == 10){
               jumping = 0
               jumpSpriteTimer = 0
               image_index = 0
               sprite_index = sprSniperJoe01;
           }
        }
        else{
        if(jumpSpriteTimer == 0)
        sprite_index = sprSniperJoe01;
        }
    }
}
else if (dead)
{
